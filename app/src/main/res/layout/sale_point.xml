<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".SalePointActivity"
    android:layout_marginBottom="5dp"
    android:padding="10dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_sale_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="25dp"
        android:layout_marginBottom="3dp"
        />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btn_sale_dec"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_sale_name"
        android:textSize="30dp"
        android:textStyle="bold"
        android:text="@string/dec"
        android:padding="1dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/circle_button"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_sale_amount"
        app:layout_constraintTop_toBottomOf="@id/tv_sale_name"
        app:layout_constraintStart_toEndOf="@id/btn_sale_dec"
        android:textSize="20dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btn_sale_inc"
        app:layout_constraintStart_toEndOf="@id/tv_sale_amount"
        app:layout_constraintTop_toBottomOf="@id/tv_sale_name"
        android:textSize="30dp"
        android:textStyle="bold"
        android:text="@string/inc"
        android:padding="1dp"
        android:layout_marginStart="2dp"
        android:background="@drawable/circle_button"
        />

</androidx.constraintlayout.widget.ConstraintLayout>